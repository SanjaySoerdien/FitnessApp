@model IEnumerable<FitnessWebAppModels.Exercise>

@{
    ViewData["Title"] = "Index";
}

<h2>Top exercises</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MuscleGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kudos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @if (Model.Count() <= 0)
    {
        <tr>
            <td>
                No results found
            </td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
         {
             <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.Name)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.MuscleGroup)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Kudos)
                 </td>
                 <td>
                     @Html.ActionLink("View", "ShowExercise", new {item.Id})
                 </td>
             </tr>
         }
    }
    </tbody>
</table>
