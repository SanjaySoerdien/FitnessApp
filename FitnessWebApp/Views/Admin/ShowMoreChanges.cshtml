@model IEnumerable<FitnessWebAppModels.Change>

@{
    ViewData["Title"] = "ShowMoreChanges";
}

<h2>More changes</h2>
<container>
    <table class="table col-sm-12">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.changeText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.time)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.changeText)
                        </td>
                        <td>
                            @item.time.ToString("MM/dd/yyyy hh:mm tt")
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>
                        No recent changes
                    </td>
                </tr>
            }
        </tbody>
    </table>
</container>
