@model IEnumerable<FitnessWebAppModels.Change>
@{
    ViewData["Title"] = "Index";
}

<div class="row">.
    <h2>Admin screen</h2>
</div><br/>
<div class="col-xs-4">
    <p><a class="btn btn-primary" asp-action="CategoriesView" role="button">Categories</a></p>
    <p><a class="btn btn-primary" asp-action="ExerciseView" role="button">Exercises</a></p>
</div>

<div class="jumbotron col-xs-8">
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.changeText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time)
            </th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count() > 0)
        {

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.changeText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.time.ToString("dddd, dd MMMM yyyy HH:mm:ss"))
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    No recent changes
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>